@using System.IdentityModel.Protocols.WSTrust
@model IEnumerable<ODN.Empleado>

@{
    ViewBag.Title = "Index";
}
<br/>
<h3 class="text-center">Empleados</h3>


<script>
    $(document).ready(function () {

        $(document).ajaxStart(function () {
            $("#cargando").show();
        });

        $(document).ajaxStop(function () {
            $("#cargando").hide();
        });
</script>

@using (Html.BeginForm("Index", "EmpleadoI", FormMethod.Get))
{

    <b>Buscar por:</b>
    @Html.RadioButton("buscarPor", "Nombre", true) <text>Nombre</text>
    @Html.RadioButton("buscarPor", "Departamento")<text>Departamento</text>  
    <br/>                                                  
    <p>
        <b>Buscar por:</b> @Html.TextBox("buscar") <input type="submit" value="buscar" class="btn btn-primary" />
    </p>
}

<div id="cargando" class="modal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Cargando...</h4>
            </div>
            <div class="modal-body">
                <div class="progress progress-striped active">
                    <div class="progress-bar" style="width: 100%"></div>
                </div>
            </div>
        </div>
    </div>
</div>


<ul class="nav nav-pills">
    @if (ViewBag.Estatus == "A")
    {
        <li class="active">@Html.ActionLink("Activos", "Index", new { Estatus = "A" })</li>
    }
    else
    {
        <li>@Html.ActionLink("Activos", "Index", new { Estatus = "A" })</li>
    }
    @if (ViewBag.Estatus == "I")
    {
        <li class="active">@Html.ActionLink("Inactivos", "Index", new { Estatus = "I" })</li>
    }
    else
    {
        <li>@Html.ActionLink("Inactivos", "Index", new { Estatus = "I" })</li>
    }
</ul>

<br/>
<table class="table table-bordered table-responsive table-hover table-striped">
    <tr class="text-primary active">
        <th>
            @Html.ActionLink("Código de empleado", "Index", new { SortOrder = ViewBag.SortOrder == null ? "Asc" : (ViewBag.SortOrder == "Asc" ? "Desc" : "Asc"), SortBy = "CodigoEmp", page = (ViewBag.Page == null ? "1" : ViewBag.Page) })
        </th>
        <th>
            @Html.ActionLink("Nombre", "Index", new { SortOrder = ViewBag.SortOrder == null ? "Asc" : (ViewBag.SortOrder == "Asc" ? "Desc" : "Asc"), SortBy = "Nombre", page = (ViewBag.Page == null ? "1" : ViewBag.Page) })
        </th>
        <th>
            @Html.ActionLink("Apellido", "Index", new { SortOrder = ViewBag.SortOrder == null ? "Asc" : (ViewBag.SortOrder == "Asc" ? "Desc" : "Asc"), SortBy = "Apellido", page = (ViewBag.Page == null ? "1" : ViewBag.Page) })
        </th>
        <th>
            @Html.ActionLink("Edad", "Index", new { SortOrder = ViewBag.SortOrder == null ? "Asc" : (ViewBag.SortOrder == "Asc" ? "Desc" : "Asc"), SortBy = "Edad", page = (ViewBag.Page == null ? "1" : ViewBag.Page) })
        </th>
        <th>
            @Html.ActionLink("Teléfono", "Index", new { SortOrder = ViewBag.SortOrder == null ? "Asc" : (ViewBag.SortOrder == "Asc" ? "Desc" : "Asc"), SortBy = "Telefono", page = (ViewBag.Page == null ? "1" : ViewBag.Page) })
        </th>
        <th>
            @Html.ActionLink("Fecha de ingreso", "Index", new { SortOrder = ViewBag.SortOrder == null ? "Asc" : (ViewBag.SortOrder == "Asc" ? "Desc" : "Asc"), SortBy = "Fecha de ingreso", page = (ViewBag.Page == null ? "1" : ViewBag.Page) })
        </th>
        <th>
            @Html.ActionLink("Salario", "Index", new { SortOrder = ViewBag.SortOrder == null ? "Asc" : (ViewBag.SortOrder == "Asc" ? "Desc" : "Asc"), SortBy = "Salario", page = (ViewBag.Page == null ? "1" : ViewBag.Page) })
        </th>
        <th>
            @Html.ActionLink("Estatus", "Index", new { SortOrder = ViewBag.SortOrder == null ? "Asc" : (ViewBag.SortOrder == "Asc" ? "Desc" : "Asc"), SortBy = "Estatus", page = (ViewBag.Page == null ? "1" : ViewBag.Page) })

        </th>
        <th>
            @Html.ActionLink("Código cargo", "Index", new { SortOrder = ViewBag.SortOrder == null ? "Asc" : (ViewBag.SortOrder == "Asc" ? "Desc" : "Asc"), SortBy = "CodigoCargo", page = (ViewBag.Page == null ? "1" : ViewBag.Page) })

        </th>
        <th>
            @Html.ActionLink("Código del departamento", "Index", new { SortOrder = ViewBag.SortOrder == null ? "Asc" : (ViewBag.SortOrder == "Asc" ? "Desc" : "Asc"), SortBy = "CodigoDep", page = (ViewBag.Page == null ? "1" : ViewBag.Page) })

        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CodigoEmp)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Apellido)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Edad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telefono)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaIngreso)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Salario)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Estatus)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cargo.CodigoCargo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Departamento.CodigoDep)
            </td>
        </tr>
    }

</table>


@{
    double TotalPage = @ViewBag.TotalPages;
}

@for (int i = 1; i <= TotalPage; i++)
{
    if (i == ViewBag.Page)
    {
        <b>@Html.ActionLink(i.ToString() + " ", "Index", new { SortOrder = (ViewBag.SortOrder == null ? "Asc" : ViewBag.SortOrder), SortBy = (ViewBag == null ? "CodigoEmp" : ViewBag.SortBy), Page = i }, new { @class = "btn btn-primary" })</b>
    }
    else
    {
        @Html.ActionLink(i.ToString() + " ", "Index", new { SortOrder = (ViewBag.SortOrder == null ? "Asc" : ViewBag.SortOrder), SortBy = (ViewBag.SortBy == null ? "CodigoEmp" : ViewBag.SortBy), Page = i }, new { @class = "btn btn-primary" })
    }
}