@model IEnumerable<ODN.Permiso>

@{
    ViewBag.Title = "Index";
}

<br/>
<h2 class="text-center">Permisos</h2>
<hr/>
<table class="table table-bordered table-hover table-striped table-responsive">
    <tr class="active text-primary">
        <th>
            @Html.DisplayNameFor(model => model.Desde)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Hasta)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Comentarios)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Empleado.CodigoEmp)
        </th>
        <th>
            @Html.ActionLink("Agregar", "Create", FormMethod.Post, new{area="Admin", @class= "btn btn-primary"})
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Desde)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Hasta)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Comentarios)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Empleado.CodigoEmp)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.Id , area= "Admin"}) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Eliminar", "Delete", new { id=item.Id, area="Admin" }, new{@class = "btn btn-danger"})
        </td>
    </tr>
}

</table>
