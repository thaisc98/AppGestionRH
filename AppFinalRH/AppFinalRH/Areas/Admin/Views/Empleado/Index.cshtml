@model IEnumerable<ODN.Empleado>

@{
    ViewBag.Title = "Index";
}
<br />
<h2 class="text-center">Empleados</h2>
<hr/>
<table class="table table-bordered table-hover table-responsive table-striped">
    <tr class="active text-primary">
        <th>
            @Html.DisplayNameFor(model => model.CodigoEmp)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Apellido)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Edad)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Telefono)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FechaIngreso)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Salario)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Estatus)
        </th>
        <th>
            @Html.DisplayName("Cargo")
        </th>
        <th>
            @Html.DisplayName("Departamento")
        </th>
        <th>
            @Html.ActionLink("Agregar", "Create", "Empleado", new{area = "Admin"})
        </th>
    </tr>


    @foreach (var item in Model)
    {

        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CodigoEmp)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Apellido)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Edad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telefono)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.FechaIngreso)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Salario)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Estatus)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cargo.NombreCargo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Departamento.NombreDep)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Eliminar", "Delete", new { id = item.Id }, new {area="Admin", onclick = "return confirmar();", @class="btn btn-danger" })
            </td>
        </tr>
    }
</table>

<script>
    function confirmar() {
        return confirm('¿Seguro que quieres eliminar este departamento?');
    }
</script>