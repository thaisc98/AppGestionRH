@model IEnumerable<ODN.SalidaEmpleado>

@{
    ViewBag.Title = "Index";
}
<br/>
<h2 class="text-center">Salidas de empleados</h2>

<table class="table table-bordered table-hover table-striped table-responsive">
    <tr class="text-center active">
        <th>
            @Html.DisplayNameFor(model => model.Tipo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Motivo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FechaSalida)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Empleado.CodigoEmp)
        </th>
        <th>
            @Html.ActionLink("Agregar", "Create","SalidaEmpleado", FormMethod.Post, new{area="Admin"})
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Tipo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Motivo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FechaSalida)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Empleado.CodigoEmp)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.Id, area="Admin" }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id, area= "Admin" }) |
        </td>
    </tr>
}
</table>
